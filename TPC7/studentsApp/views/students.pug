extends layout

block content
    .w3-card-4
      header.w3-container.w3-teal
        h3.w3-left Students List (DAW2020)
      if list.length > 0
        .w3-container 
          table.w3-table-all
            tr 
              th Number 
              th Name
              th Git
            each s in list
              tr
                td 
                  a(href=`/students/${s.numero}`)=  s.numero
                td= s.nome
                td
                  a(href=`${s.git}`)= s.git
                td
                  a(href=`/students/edit/${s.numero}`)
                    button(type="button") Editar 
                td
                  a(href=`/students/delete/${s.numero}`)
                    button(type="button") Apagar 
            td
              a(href=`/students/register`)
                button(type="button") Criar novo aluno
      else
        .w3-container
          p There are no students...
      footer.w3-container.w3-teal
            a Gerado por studentsAPP :: 2020-Nov, Luis Duarte 

  
